.hero-unit
  %h1= t('.hero.header')
  %p= t('.hero.content.line_html', link: link_to(t('.hero.content.link'), new_vendor_path))

%h4
  = t('.featured_projects')
  %small= link_to t('.see_all'), projects_path

.row-fluid.featured-projects
  - @featured_projects.each do |project|
    .span4.project
      = link_to project.title, project, class: "project-title"
      - if project.featured?
        %i.icon-star
      .abstract
        = project.abstract_or_truncated_body
        = link_to t('.read_more'), project
      .bids-due
        - if project.bids_due_at
          Bids due on #{project.bids_due_at.to_formatted_s(:readable_dateonly)}
        - else
          = t('projects.open_for_bids')

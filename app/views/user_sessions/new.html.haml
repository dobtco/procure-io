!=page_header t('globals.sign_in')

= form_tag sign_in_path, method: :post do

  %label= t('globals.email_address')
  %input{"type" => "text", "name" => "user_session[email]", "placeholder" => t('globals.email_address')}

  %label= t('globals.password')
  %input{"type" => "password", "name" => "user_session[password]", "placeholder" => t('globals.password')}

  .form-actions
    %button.btn.btn-primary= t('globals.sign_in')
    = t('users.or_sign_up.line_html', link: link_to(t('users.or_sign_up.link'), "#"))

  .forgot-password-wrapper
    = t('users.forgot_password.line_html', link: link_to(t('users.forgot_password.link'), "#"))
- provide :page_action, t('g.edit_amendment')

= render "projects/officer_nav"

= form_for [@project, @amendment] do |f|
  = f.label :posted_at, t('g.live')
  .switch
    = f.check_box :posted_at, disabled: if !(can? :post_amendments_live, @project) then true end

  = f.label :title
  = f.text_field :title, class: "span6"

  = f.label :body
  = f.text_area :body, cols: false, rows: 10, class: "span6"

  .form-actions
    = f.submit t('g.update_amendment'), class: "btn btn-inverse"

=link_to t('g.delete_amendment'), project_amendment_path(@project, @amendment), method: :delete, confirm: t('g.confirm_amendment_deletion')
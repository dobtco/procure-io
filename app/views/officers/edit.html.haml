!= page_header t('.header', name: @officer.display_name)

= link_to t('.back_to_list_html'), officers_path

= form_for @officer do |f|

  = f.label :name
  = f.text_field :name

  = f.label :title
  = f.text_field :title

  = f.label :email
  = f.text_field :email

  = f.label :role
  = f.collection_select :role_id, Role.assignable_by_officer(current_officer), :id, :name, include_blank: true

  .form-actions
    = f.submit t('actions.officer.update'), class: "btn btn-inverse"
.row-fluid
  .span3.well
    %form#project-filter-form
      .control-group
        %label Filter
        %input.search-query{"type" => "text", "placeholder" => "Searches all fields", "name" => "q", "data-value" => "filterOptions.q"}

      .control-group
        %label Category
        %select#category-filter{"data-backbone-filter-tag" => "true", "name" => "category", "data-value" => "filterOptions.category"}
          %option{"value" => ""} All Categories
          - for category in @allCategories
            %option{"value" => category}= category

      %button.btn.btn-inverse.pull-right Filter Projects

  .span9.right-side-span
    #loading-indicator
      %i.icon-refresh.icon-spin
      Loading...

    #sort-wrapper.pull-left

    #pagination-wrapper.pull-right

    .clearfix &nbsp;

    #projects-wrapper